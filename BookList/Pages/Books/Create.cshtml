@page
@model BookList.Pages.Books.CreateModel
@{
}


<br />
<h2 class="text-info">Create New Book</h2>
<br />

<div class=" container border p-3">
    <form method="post">
        <div class="text-dangger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-9">
                <input asp-for="Book.Name" class="form-control"/>
            </div>
            <span asp-validation-for="Book.Name" class="text-danger offset-2 pl-3 pt-1"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-9">
                <input asp-for="Book.Author" class="form-control"/>
            </div>
            <span asp-validation-for="Book.Author" class="text-danger offset-2 pl-3 pt-1"></span>
        </div>

         <div class="form-group row">
            <div class="col-2">
                <label asp-for="Book.Description"></label>
            </div>
            <div class="col-9">
                <textarea asp-for="Book.Description" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Book.Description" class="text-danger offset-2 pl-3 pt-1"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-9">
                <input asp-for="Book.ISBN" class="form-control"/>
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger offset-2 pl-3 pt-1"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-5">
                <input type="submit" value="Create" class="btn btn-primary form-control"/>
            </div>

            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

<!-- Avoid validation from running on the server side -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}